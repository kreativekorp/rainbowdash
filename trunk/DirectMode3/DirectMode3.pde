unsigned char whichbuf = 1;
unsigned char bufpos = 0;

void setup() {
	init_rainbow(buffer[0]);
	Serial.begin(9600);
}

void loop() {
	if (Serial.available() > 0) {
		buffer[whichbuf][bufpos++] = Serial.read();
		if (bufpos >= 192) {
			set_next_buffer(buffer[whichbuf]);
			whichbuf ^= 1;
			bufpos = 0;
		}
	}
}

